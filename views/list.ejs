<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

<style>
  table, th, td {
    border: 1px solid rgb(32, 240, 84);
    padding: 5px;
  }
  table {
    border-spacing: 15px;
  }
  </style>


<div class="container">
    <div style="text-align: center;">

        <h1 style="font-family: 'Times New Roman', Times, serif;">User List</h1>
     
        <table>
            <tr>
              <th><h3>Name</h3></th>
              <th><h3>Email</h3></th> 
              <th><h3>Birthday</h3></th>
              <th><h3>Image</h3></th>
            </tr>
            <% User.forEach(function(data) { %>
            <tr>
              <td><h4><%= data.name %></h4></td>
              <td><h4><%= data.email %></h4></td>
              <td><h4><%= data.date.toDateString() %></h4></td>
              <td><img width="100px" height="100px" src="/<%= data.image.url %>" alt=""></td>
            </tr>
            <% })%>

          </table>
          <div style="padding: 10px;">
            <button class="btn btn-lg btn-white"><a href="/">Add New User</a></button>
          </div>



        

            
            
            

            
    </div>
</div>